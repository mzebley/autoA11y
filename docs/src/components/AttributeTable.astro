---
type AttributeRow = {
  attribute: string;
  type: string;
  allowedValues?: string;
  defaultValue?: string;
  description: string;
};

const { attributes } = Astro.props as { attributes: AttributeRow[] };
---
<table class="attribute-table">
  <caption class="attribute-table__caption">Attribute reference</caption>
  <thead>
    <tr>
      <th scope="col">Attribute</th>
      <th scope="col">Type</th>
      <th scope="col">Allowed values</th>
      <th scope="col">Default</th>
      <th scope="col">Description</th>
    </tr>
  </thead>
  <tbody>
    {attributes.map((row) => (
      <tr>
        <th scope="row"><code>{row.attribute}</code></th>
        <td>{row.type}</td>
        <td>{row.allowedValues ?? '—'}</td>
        <td>{row.defaultValue ?? '—'}</td>
        <td>{row.description}</td>
      </tr>
    ))}
  </tbody>
</table>

<style>
  .attribute-table {
    width: 100%;
    border-collapse: collapse;
    font-size: var(--sl-text-sm);
    margin: var(--sl-spacing-lg) 0;
    border-radius: var(--sl-border-radius-md);
    overflow: hidden;
  }

  .attribute-table th,
  .attribute-table td {
    border: 1px solid var(--docs-border-soft);
    padding: var(--sl-spacing-sm) var(--sl-spacing-md);
    vertical-align: top;
  }

  .attribute-table thead th {
    background: var(--docs-table-header-bg);
    font-weight: 600;
  }

  .attribute-table tbody tr:nth-child(odd) td,
  .attribute-table tbody tr:nth-child(odd) th[scope="row"] {
    background: var(--docs-table-row-alt-bg);
  }

  .attribute-table__caption {
    text-align: left;
    font-weight: 600;
    margin-bottom: var(--sl-spacing-sm);
  }

  .attribute-table code {
    font-size: var(--sl-text-sm);
  }

  @media (max-width: 720px) {
    .attribute-table {
      display: block;
      overflow-x: auto;
      border-radius: var(--sl-border-radius-md);
    }
  }
</style>
